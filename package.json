{
  "name": "curb-food",
  "workspaces": {
    "packages": [
      "app",
      "server"
    ],
    "//": "TODO: narrow down nohoist, this should only point to affected packages. Is used due to react-native being stupid and cannot find it's packagers otherwise",
    "nohoist": [
      "**/app",
      "**/app/**",
      "**/server",
      "**/server/**"
    ]
  },
  "version": "0.0.1",
  "engines": {
    "node": "12.x"
  },
  "private": true,
  "scripts": {
    "app": "yarn workspace app start",
    "android": "yarn workspace app android",
    "iphone": "yarn workspace app iphone",
    "web": "yarn workspace app web",
    "be:dev": "yarn workspace server dev",
    "be:start": "yarn workspace server start",
    "start": "yarn workspace server build && yarn workspace server start"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
